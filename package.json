{
	"name": "@cinderlink/ui-kit",
	"type": "module",
	"version": "1.0.0-next.0",
	"scripts": {
		"dev": "vite dev --port 3002",
		"watch": "svelte-package --watch",
		"build": "svelte-kit sync && svelte-package",
		"test": "bun run test:browser",
		"test:all": "bun run test:browser && bun run test:e2e",
		"test:e2e": "playwright test --config playwright-e2e.config.ts",
		"test:e2e:ui": "playwright test --config playwright-e2e.config.ts --ui",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"test:unit:watch": "vitest watch",
		"test:browser": "vitest --config vitest.browser.config.ts",
		"test:browser:ui": "vitest --config vitest.browser.config.ts --ui",
		"test:coverage": "vitest run --coverage",
		"lint": "oxlint",
		"format": "prettier --plugin-search-dir . --write .",
		"format:check": "prettier --plugin-search-dir . --check .",
		"prepare": "husky"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist/",
		"README"
	],
	"devDependencies": {
		"@axe-core/playwright": "^4.10.2",
		"@esbuild-plugins/node-globals-polyfill": "^0.2.3",
		"@iconify-json/logos": "^1.1.30",
		"@iconify-json/tabler": "^1.1.8",
		"@playwright/test": "^1.53.1",
		"@sveltejs/adapter-auto": "^5.0.0",
		"@sveltejs/package": "^2.3.11",
		"@sveltejs/vite-plugin-svelte": "^4.0.4",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.8",
		"@types/markdown-it": "^14.0.4",
		"@types/node": "^24.0.1",
		"@unocss/extractor-svelte": "^66.1.4",
		"@unocss/postcss": "^66.1.4",
		"@unocss/reset": "^66.1.4",
		"@vitest/browser": "^3.2.4",
		"@vitest/coverage-v8": "^3.2.4",
		"husky": "^9.1.7",
		"jsdom": "^26.1.0",
		"lint-staged": "^16.1.0",
		"oxlint": "^1.1.0",
		"playwright": "^1.53.1",
		"postcss": "^8.4.38",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.3.0",
		"sanitize-html": "^2.14.0",
		"svelte-check": "^4.0.4",
		"svelte-preprocess": "^6.0.3",
		"tslib": "^2.6.2",
		"typescript": "^5.4.5",
		"unocss": "^66.1.4",
		"vite": "^5.4.19",
		"vitest": "^3.2.4",
		"vitest-browser-svelte": "^0.1.0"
	},
	"dependencies": {
		"@codemirror/autocomplete": "^6.18.6",
		"@codemirror/commands": "^6.8.1",
		"@codemirror/lang-css": "^6.3.1",
		"@codemirror/lang-html": "^6.4.9",
		"@codemirror/lang-javascript": "^6.2.4",
		"@codemirror/lang-json": "^6.0.1",
		"@codemirror/lang-markdown": "^6.3.2",
		"@codemirror/language": "^6.11.1",
		"@codemirror/language-data": "^6.5.1",
		"@codemirror/state": "^6.5.2",
		"@codemirror/view": "^6.37.1",
		"@lezer/highlight": "^1.2.1",
		"@replit/codemirror-lang-svelte": "^6.0.0",
		"@sveltejs/kit": "^2.21.1",
		"ajv": "^8.12.0",
		"codemirror": "^6.0.1",
		"copy-to-clipboard": "^3.3.3",
		"emittery": "^1.0.1",
		"highlight.js": "^11.11.1",
		"highlightjs-solidity": "^2.0.6",
		"highlightjs-svelte": "^1.0.6",
		"markdown-it": "^14.1.0",
		"markdown-it-emoji": "^3.0.0",
		"svelte": "^5.33.11",
		"svelte-highlight": "^7.8.3"
	},
	"lint-staged": {
		"src/**/*.{js,ts,svelte}": [
			"oxlint",
			"bun run check"
		]
	}
}
