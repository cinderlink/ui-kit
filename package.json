{
	"name": "@cinderlink/ui-kit",
	"type": "module",
	"version": "1.0.0-next.0",
	"scripts": {
		"dev": "vite dev --port 3002",
		"watch": "svelte-package --watch",
		"build": "svelte-kit sync && svelte-package",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"test:unit:watch": "vitest watch",
		"test:coverage": "vitest run --coverage",
		"lint": "eslint . --ext .svelte,.js,.ts",
		"format": "prettier --plugin-search-dir . --write .",
		"format:check": "prettier --plugin-search-dir . --check .",
		"prepare": "husky"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist/",
		"README"
	],
	"devDependencies": {
		"@esbuild-plugins/node-globals-polyfill": "^0.2.3",
		"@iconify-json/logos": "^1.1.30",
		"@iconify-json/tabler": "^1.1.8",
		"@playwright/test": "^1.43.1",
		"@sveltejs/adapter-auto": "^5.0.0",
		"@sveltejs/package": "^2.3.11",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@types/highlight.js": "^10.1.0",
		"@types/markdown-it": "^14.0.4",
		"@types/markdown-it-emoji": "^3.0.1",
		"@typescript-eslint/eslint-plugin": "^8.33.2-alpha.3",
		"@typescript-eslint/parser": "^8.33.2-alpha.3",
		"@unocss/extractor-svelte": "^66.1.4",
		"@unocss/reset": "^66.1.4",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^3.0.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.0",
		"postcss": "^8.4.38",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.3.0",
		"sanitize-html": "^2.14.0",
		"svelte-check": "^4.0.4",
		"svelte-preprocess": "^6.0.3",
		"tslib": "^2.6.2",
		"typescript": "^5.4.5",
		"unocss": "^66.1.4",
		"vite": "^6.3.5",
		"vitest": "^1.6.0"
	},
	"dependencies": {
		"@sveltejs/kit": "^2.21.1",
		"ajv": "^8.12.0",
		"copy-to-clipboard": "^3.3.3",
		"emittery": "^1.0.1",
		"highlight.js": "^11.11.1",
		"highlightjs-solidity": "^2.0.6",
		"highlightjs-svelte": "^1.0.6",
		"markdown-it": "^14.1.0",
		"markdown-it-emoji": "^3.0.0",
		"svelte": "^5.33.11",
		"svelte-highlight": "^7.8.3"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"npm run lint -- --fix",
			"npm run check"
		]
	}
}
